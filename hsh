#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>

#define BUFFER_SIZE 1024

void display_prompt() {
    printf("$ "); // Print shell prompt
}

int main() {
    char buffer[BUFFER_SIZE];
    char *args[100];
    int status;
    pid_t pid;

    while (1) {
        display_prompt();

        // Read input from the user
        if (fgets(buffer, BUFFER_SIZE, stdin) == NULL) {
            break;
        }

        // Tokenize the input into arguments
        int arg_count = 0;
        char *token = strtok(buffer, " \t\n");
        while (token != NULL) {
            args[arg_count] = token;
            arg_count++;
            token = strtok(NULL, " \t\n");
        }
        args[arg_count] = NULL;

        // Fork a child process
        pid = fork();

        if (pid == -1) {
            perror("Error forking process");
        } else if (pid == 0) {
            // Child process
            if (execvp(args[0], args) == -1) {
                perror(args[0]); // Print error if command execution fails
            }
            exit(EXIT_FAILURE);
        } else {
            // Parent process
            waitpid(pid, &status, 0);
        }
    }

    return 0;
}
